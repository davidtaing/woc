{
    "swagger": "2.0",
    "info": {
        "title": "WOC API in development documentation",
        "description": "API description in Markdown.",
        "version": "1.0.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "schemes": ["https"],
    "tags": [
        { "name": "auth",
        "description": "auth endpoints"}
    ],
    "paths": {
        "/auth/checkmail": { 
            "post": {
                "summary": "check if email is used",
                "tags": ["auth"],
                "parameters": [{ 
                    "in": "body", 
                    "name": "body",
                    "description": "email to check for availability",
                    "required": true,
                    "schema": { "$ref": "#components/RequestBody/CheckEmail"}
                }],
                "responses": { 
                    "200": {
                        "NOTE": "move schema to components",
                        "description": "success",
                        "schema": { "$ref": "#components/ResponseBody/CheckEmail" }
                    }
                }
            }
        },
        "/auth/login": { "get": { "tags": ["auth"]} },
        "/auth/signup": { "get": { "tags": ["auth"]} },

        "/events": { "get": { "tags": ["events"]} },

        "/user": { "get": { "tags": ["user"]} },
        "/user/all": { "get": { "tags": ["user"]} },
        "/user/update": { "get": { "tags": ["user"]} },
        "/user/update/role": { "get": { "tags": ["user"]} },

        "/admin": { "get": {
            "summary": "place holder admin only endpoint",
            "description": "place holder admin only endpoint"
        } },
        "/users": {
            "get": {
                "summary": "return list of users",
                "description": "optional",
                "produces": ["application/json"],
                "responses": {
                    "200": { "description" : "OK" }
                }
            }
        }
    },
    "definitions": {
        
        "User": {
            "description": "Base user object model",
            "properties": {
                "_id": {
                    "type": "string",
                    "format": "MongoDB ObjectID"
                },
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "middleName": { "type": "string" },
                "email": { "type": "string" },
                "phone": { "type": "string" },
                "linkedinUrl": { "type": "string", "format": "url" },
                "role": { 
                    "type": "string",
                    "enum": [ "admin", "mentor", "mentee"]
                },
                "passwordHash": { "type": "string" },
                "gender": { "type": "string" },
                "about": { "type": "string" },
                "skills": { "type": "array", "items": { "type":"string"} },
                "mentor": { "type": "string", "format": "User ObjectID" },
                "mentee": { "type": "string" },
                "mentees": { "type": "array", "items": { "type": "string", "format": "User ObjectID"} },
                "job": { "type": "string" },
                "company": { "type": "string" }
            },
            "required": [
                "firstName", "lastName", "email", "role", "passwordHash"
            ]
        }
    },
    "components": {
        "RequestBody": {
            "CheckEmail": {
                "type": "object",
                "properties": {
                    "email": { "type": "string", "example": "woc@email.com"}
                }
            }
        }, 
        "ResponseBody": {
            "CheckEmail": {
                "type": "object",
                "properties": {
                    "exist": { "type": "boolean" },
                    "msg": { "type": "string" }
                }
            }
        }
    }

}